<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Inflected Objects</title>
		<meta name="description" content="">
		<meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="css/inflected-main.css" type="text/css">
	</head>

    <body class="<%= @name %>">

        <div class="container">

            <div class="header">
                <h1 class="header-title">
                    <span class="deform">Inflected objects</span>
                </h1>
            </div>

            <div class="navigation">
                <ol class="navigation-list">
                    <% for @section_name, @section in @sections %>
                        <li class="navigation-item navigation-item--<%= @section[:public_path] %>">
                            <a class="navigation-link"
                               href="<%= @section[:public_path] %>.html">
                               <span class="deform">
                                   <%= @section[:title] %>
                               </span>
                            </a>
                            <% if @section[:children] %>
                            <ul class="subnavigation">
                                <% for @subsection_name, @subsection in @section[:children] %>
                                    <li class="subnavigation-item">
                                        <a class="subnavigation-link" href="<%= @subsection[:public_path] %>.html">
                                            <span class="deform">
                                                <%= @subsection[:title] %>
                                            </span>
                                        </a>
                                    </li>
                                <% end %>
                            </ul>
                            <% end %>
                        </li>
                    <% end %>
                </ol>
            </div>

            <div class="footer">
                <span class="footer-text">
                    A project initiated by the Istituto Svizzero
                    </span>
                    <img src="css/isr-logo.jpg" alt="Istituto Svizzero's logo">
                </span>
            </div>
        </div>


        <script src="js/bundle.js"></script>
	</body>
</html>
