<!doctype html>
<html>
	<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>Inflected Objects/<%= @title %></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="css/inflected-main.css" type="text/css">
	</head>

    <body class="<%= @name %>">

        <div class="container">

            <div class="header">
                <h1 class="header-title">
                    <span class="deform">Inflected objects</span>
                </h1>
            </div>

            <div class="content">
                <ul class="items">
                    <% for @img in @imgs %>
                        <li class="item item--image">
                            <div class="item-container">
                                <div class="item-content">
                                <% if @img.class == Array %>
                                    <ul class="carousel">
                                    <% for @carousel in @img %>
                                        <li class="carousel-image">
                                            <img src="assets/imgs/<%= File.basename(@carousel) %>">
                                        </li>
                                    <% end %>
                                    </ul>
                                <% else %>
                                    <img src="assets/imgs/<%= File.basename(@img) %>">
                                <% end %>
                                </div>
                            </div>
                        </li>
                    <% end %>

                <% if @videos %>
                    <% for @video in @videos %>
                        <li class="item item--video">
                            <div class="item-container">
                                <div class="item-content">
                                    <iframe width="560" 
                                        height="315"
                                        src="<%= @video %>"
                                        frameborder="0" allowfullscreen="allowfullscreen"></iframe>
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>

                <% if @texts %>
                    <% for @text in @texts %>
                        <li class="item item--text">
                            <div class="item-container">
                                <div class="item-content">
                                    <%= Kramdown::Document.new(File.read(@text)).to_html %>
                                </div>
                            </div>
                        </li>
                    <% end %>
                <% end %>

                <% if @externals %>
                    <% for @external in @externals %>
                        <li>
                            <iframe width="560" 
                                    height="315"
                                    src="<%= @external %>"
                                    frameborder="0">
                            </iframe>
                        </li>
                    <% end %>
                <% end %>
                </ul>

            </div>
        </div>

        <script src="js/bundle.js"></script>

	</body>
</html>
